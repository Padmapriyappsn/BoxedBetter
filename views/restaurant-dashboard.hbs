<!-- restaurant-dashboard.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Restaurant Dashboard</h1>
    </header>

    <section>
        <h2>Post a New Food Item</h2>
        
        {{#if message}}
            <p class="error-message">{{message}}</p> <!-- Error message displayed here -->
        {{/if}}

        <form action="/postfood" method="POST">
            <label for="foodName">Food Name:</label>
            <input type="text" id="foodName" name="foodName" required>
            
            <label for="description">Description:</label>
            <textarea id="description" name="description" required></textarea>

            <label for="discountedPrice">Discounted Price ($):</label>
            <input type="number" id="discountedPrice" name="discountedPrice" step="0.01" required>
            <label for="discountedPrice">Restaurant Id:</label> {{restaurantId}}
            <!-- Ensure restaurantId is passed correctly from your route -->
            <input type="hidden" name="restaurantId" value="{{restaurantId}}">

            <button type="submit">Post Food Item</button>
        </form>
    </section>

    <section>
        <h2>Current Food Items</h2>

        {{#if foods.length}}
            <ul class="food-list">
                {{#each foods}}
                    <li class="food-item">
                        <h3>{{this.foodName}}</h3>
                        <p><strong>Description:</strong> {{this.description}}</p>
                        <p><strong>Discounted Price:</strong> ${{this.discountedPrice}}</p>
                        <form action="/restaurant/delete-food/{{this.foodId}}" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p>No food items available. Add new food items to post discounts!</p>
        {{/if}}
    </section>
    <footer style="text-align: center; padding: 20px; background-color: #f1f1f1;">
        <h3 style="text-align: right;">
        <ul class="navbar-nav ml-auto;">
            <li style="list-style: none;">
                <a href="/restaurant/logout" style="color: darkgreen; text-decoration: none">Logout</a>
            </li>
        </ul>
        </h3>
    </footer>

</body>
</html>
