<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>My Orders</h1>
        <nav>
            <ul>
                <li><a href="/student/dashboard">Dashboard</a></li>
                <li><a href="/student/logout">Logout</a></li>
            </ul>
        </nav>
    </header>

    <section>
        <h2>Order History</h2>

        {{#if orders.length}}
            <table class="order-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Restaurant</th>
                        <th>Food Item</th>
                        <th>Status</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                        <tr>
                            <td>{{this.orderId}}</td>
                            <td>{{this.restaurant.name}}</td> <!-- Restaurant name -->
                            <td>{{this.foodItem.foodName}}</td> <!-- Food item name -->
                            <td>{{this.orderStatus}}</td> <!-- Order status -->
                            <td>${{this.totalPrice}}</td> <!-- Total price, adjust as needed -->
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <p>No orders found.</p>
        {{/if}}
    </section>
</body>
</html>
