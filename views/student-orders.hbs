<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <br>
    <header>
        <h2 style="color: white;">Student Dashboard</h2>
        <nav>
            <select id="nav-dropdown" onchange="window.location.href=this.value;" class="custom-btn">
                <option value="#">Select an option</option>
                <option value="/myorders">View Orders</option>
                <option value="/student-dashboard">Place Order</option>
                <option value="/track-order/{{#if student}}{{student.StudentId}}{{else}}defaultId{{/if}}">Track Order</option>
                <option value="/restaurants">Review Restaurant</option>
            </select>
            <a href="/student/logout" class="custom-btn">Logout</a>
        </nav>
    </header>

    <section>
        <h2>Order History</h2>

        {{#if orders.length}}
            <table class="order-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Restaurant</th>
                        <th>Food Item</th>
                        <th>Status</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                        <tr>
                            <td>{{this.orderId}}</td>
                            <td>{{#if this.restaurant.restaurantName}}{{this.restaurant.restaurantName}}{{else}}N/A{{/if}}</td>
                            <td>{{#if this.foodItem.foodName}}{{this.foodItem.foodName}}{{else}}N/A{{/if}}</td> 
                            <td>{{this.orderStatus}}</td>
                            <td>${{this.totalPrice}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <p>No orders found.</p>
        {{/if}}
    </section>
</body>
</html>
